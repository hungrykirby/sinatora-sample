<div class="fromtop works-contents-wrapper <%= @classname %>">
    <% if @contents %>
    <h1><%= @name %></h1>

    <div class="date"><p><%= @date %></p></div>

    <img src="<%= @main_pic %>" alt="">

    <h2 style="border-left: 2px solid <%= @blcolor %>;">コンセプト</h2>
    <div class="main concepts"><%= @contents %></div>

    <h2 style="border-left: 2px solid <%= @blcolor %>;">メンバー</h2>
    <div class="main members rowlist">
        <ul>
        <% @members.each do |member| %>
            <li><%= member %></li>
        <% end %>
        </ul>
    </div>

    <% if @prizes %>
    <h2 style="border-left: 2px solid <%= @blcolor %>;">賞</h2>
    <div class="main members"><%= @prizes %></div>
    <% end %>

    <h2 style="border-left: 2px solid <%= @blcolor %>;">やくわり</h2>
    <div class="main role"><%= @role %></div>

    <h2 style="border-left: 2px solid <%= @blcolor %>;">カテゴリー</h2>
    <div class="main category rowlist">
        <ul>
        <% @categories.each do |c| %>
            <li><%= c %></li>
        <% end %>
        </ul>
    </div>

    <h2 style="border-left: 2px solid <%= @blcolor %>;">発表場所</h2>
    <div class="main place"><%= @place %></div>

    <h2 style="border-left: 2px solid <%= @blcolor %>;">発表時の段階</h2>
    <div class="main process"><%= @process %></div>

    <% if @language %>
    <h2 style="border-left: 2px solid <%= @blcolor %>">使用言語、技術、フレームワーク</h2>
    <div class="main language rowlist">
        <ul>
        <% @language.each do |lan| %>
            <li><%= lan %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <% if @otherpics %>
    <h2 style="border-left: 2px solid <%= @blcolor %>;">参考写真</h2>
    <div class="otherpics">
        <ul>
        <% @otherpics.each do |l| %>
            <li><img src="<%= l %>" alt=""></li>
        <% end %>
    </div>
    <% end %>

    <h2 style="border-left: 2px solid <%= @blcolor %>;">関連リンク</h2>
    <div class="otherlinks">
        <ul>
        <% @links.each do |l| %>
            <li><a href="<%= l['uri'] %>" target="_blank" rel="noopener noreferrer"><%= l['text'] %></a></li>
